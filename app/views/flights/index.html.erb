<h1> Flights </h1>

<ul>
  <% @flights.each do |flight| %>
    <li>
      Flight Number: <%= flight.number %> - Airline: <%= flight.airline.name %>
      <ul>
        <% flight.passengers.each do |passenger| %>
          <li>
            Passenger: <%= passenger.name %>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>